{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": ["dom", "es6"],
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules/*"]
}
