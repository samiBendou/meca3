{
  "root": true,
  "env": {
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2020,
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    },
    "project": [
      "**/tsconfig.json"
    ]
  },
  "rules": {
    "prettier/prettier": 1,
    "no-unused-vars": "off",
    "@typescript-eslint/no-unused-vars": "warn"
  }
}