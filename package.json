{
  "name": "meca3",
  "version": "5.0.0",
  "description": "3D space and physics engine for point's mechanics",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "lint": "eslint",
    "test": "nyc mocha -r ts-node/register test/**/*.test.ts --timeout=30000",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "files": [
    "src",
    "dist"
  ],
  "nyc": {
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx"
    ],
    "extension": [
      ".ts",
      ".tsx"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "homepage": "https://github.com/samiBendou/meca3/wiki",
  "bugs": "https://github.com/samiBendou/meca3/issues",
  "author": "Sami Dahoux <sbdh75@gmail.com> (https://github.com/samiBendou)",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/samiBendou/meca3.git"
  },
  "keywords": [
    "maths",
    "mechanics",
    "physics",
    "vector",
    "matrix",
    "3d",
    "trajectory",
    "ode",
    "solver"
  ],
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.7",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.33.1",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^6.1.4",
    "nyc": "^14.1.1",
    "prettier-eslint": "^13.0.0",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "three-fatline": "^0.6.1"
  }
}
