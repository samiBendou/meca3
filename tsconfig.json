{
  "compileOnSave": true,
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "none",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "lib": [
      "dom",
      "es6"
    ]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}